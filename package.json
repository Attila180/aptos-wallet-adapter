{
  "name": "@aptos-labs/wallet-adapter",
  "version": "0.0.0",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "changeset version && changeset publish",
    "adapter-example:export": "pnpm run --filter {apps/nextjs-example} export",
    "adapter-example:build": "pnpm run --filter {apps/nextjs-example} build",
    "deploy:adapter-example": "pnpm run example:build && pnpm run example:export && touch ./apps/nextjs-example/out/.nojekyll && gh-pages --dist apps/nextjs-example/out --dotfiles",
    "standard-example:export": "pnpm run --filter {apps/nextjs-standard-example} export",
    "standard-example:build": "pnpm run --filter {apps/nextjs-standard-example} build",
    "deploy:standard-example": "pnpm run standard-example:build && pnpm run standard-example:export && touch ./apps/nextjs-standard-example/out/.nojekyll && gh-pages --dist apps/nextjs-standard-example/out --dest standard-example --dotfiles"
  },
  "devDependencies": {
    "@aptos-labs/eslint-config-adapter": "workspace:*",
    "@changesets/cli": "^2.22.0",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "gh-pages": "^4.0.0"
  },
  "packageManager": "pnpm@7.14.2"
}
